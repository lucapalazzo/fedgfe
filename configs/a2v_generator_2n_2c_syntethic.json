{
  "experiment": {
    "name": "federated_a2v_downstream_with_synthetic_data",
    "description": "Downstream training using pre-trained VAE generator to generate synthetic data",
    "use_balooning": false,
    "optimize_memory_usage": true
  },
  "federation": {
    "algorithm": "FedA2V",
    "diffusion_type": "flux",
    "num_clients": 3,
    "global_rounds": 100,
    "local_epochs": 3,
    "eval_gap": 1,
    "model_aggregation": "none",
    "use_saved_audio_embeddings": false
  },
  "training": {
    "learning_rate": 0.001,
    "optimizer": "AdamW",
    "batch_size": 8,
    "weight_decay": 0.0001
  },
  "feda2v": {
    "use_generator": true,
    "generator_type": "vae",
    "generator_training_mode": false,
    "generator_only_mode": false,
    "use_pretrained_generators": true,

    "_comment_granularity_note": "One generator per class - Best quality but higher memory usage",
    "generator_granularity": "per_class",
    "generator_class_groups": null,

    "generator_checkpoint_dir": "checkpoints/generators/vae_1n_5c",
    "generator_checkpoint_base_name": "vae_perclass",
    "generator_save_checkpoint": false,
    "generator_load_checkpoint": true,
    "generator_checkpoint_frequency": 5,

    "_comment_training": "=== GENERATOR TRAINING SETTINGS ===",
    "generator_training_epochs": 20,
    "generator_augmentation": true,
    "generator_augmentation_noise": 0.1,
    "generator_validation_frequency": 5,
    "generator_training_sequence_length": 1214,

    "_comment_adapter": "=== ADAPTER SETTINGS (Active for downstream training) ===",
    "adapter_aggregation_mode": "none",
    "global_model_train": false,
    "global_model_train_epochs": 10,
    "global_model_train_from_nodes_adapters": false,

    "_comment_adapter_checkpoint": "=== ADAPTER CHECKPOINT SETTINGS ===",
    "adapter_checkpoint_dir": "checkpoints/adapters/esc50-50n-1c-real",
    "adapter_checkpoint_base_name": "esc50-50n-1c-real",
    "adapter_load_checkpoint": true,
    "adapter_save_checkpoint": false,
    "adapter_checkpoint_frequency": 1,
    "adapter_checkpoint_per_type": true,

    "t5_adapter_learning_rate": 0.001,
    "clip_adapter_learning_rate": 0.001,
    "t5_adapter_weight_decay": 0.0001,
    "clip_adapter_weight_decay": 0.0001,
    "adapters_learning_rate": 0.001,
    "adapters_weight_decay": 0.0001,

    "adapters_learning_rate_schedule": false,
    "t5_adapter_learning_rate_schedule": false,
    "clip_adapter_learning_rate_schedule": true,

    "_comment_generation": "=== IMAGE GENERATION (enabled for synthetic data generation) ===",
    "generate_nodes_images_frequency": 1,
    "generate_global_images_frequency": 5,
    "generate_low_memomy_footprint": true,
    "images_output_dir": "output_images/feda2v_2n_2c_synthetic",
    "generate_from_clip_text_embeddings": false,
    "generate_from_t5_text_embeddings": false,

    "store_audio_embeddings": false,
    "audio_embedding_file_name": null
  },
  "nodes": {
    "0": {
      "dataset": "ESC50",
      "selected_classes": ["dog"],
      "diffusion_type": "flux"
    },
    "1": {
      "dataset": "ESC50",
      "selected_classes": ["pig"],
      "diffusion_type": "flux"
    }
  },
  "model": {
    "backbone": "a2v",
    "backbone_model": "hf_vit",
    "pretrained": false
  },
  "dataset": {
    "name": "ESC50",
    "path": "./data"
  },
  "wandb": {
    "disabled": false
  }
}
