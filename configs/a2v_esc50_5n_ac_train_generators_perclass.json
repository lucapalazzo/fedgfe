{
  "experiment": {
    "name": "esc50_5n_ac_generator_training_per_class",
    "description": "Training VAE generators per-class for ESC50 5-node Animals/Nature/Human/Interior/Exterior configuration",
    "goal": "esc50-5n-ac-generators-perclass",
    "device": "cuda",
    "device_id": "0",
    "runs": 1,
    "seed": 42,
    "use_balooning": true,
    "optimize_memory_usage": true
  },
  "federation": {
    "algorithm": "FedA2V",
    "num_clients": 5,
    "global_rounds": 50,
    "local_epochs": 10,
    "eval_gap": 5,
    "diffusion_type": "flux",
    "model_aggregation": "per_class_average",
    "use_saved_audio_embeddings": false
  },
  "feda2v": {
    "_comment_mode": "=== GENERATOR-ONLY TRAINING MODE (PER-CLASS) ===",
    "_comment_mode_note": "This configuration trains one VAE generator per class without training adapters",
    "use_generator": false,
    "generator_type": "vae",
    "generator_training_mode": true,
    "generator_only_mode": true,
    "use_pretrained_generators": false,

    "_comment_granularity": "=== PER-CLASS GRANULARITY ===",
    "_comment_granularity_note": "One generator per class - Best quality, higher memory usage. Total: 50 generators (10 per node)",
    "generator_granularity": "per_class",
    "generator_class_groups": null,

    "_comment_checkpoint": "=== CHECKPOINT SETTINGS ===",
    "generator_checkpoint_dir": "checkpoints/generators_esc50_5n_ac_perclass",
    "generator_checkpoint_base_name": "vae_perclass",
    "generator_save_checkpoint": true,
    "generator_load_checkpoint": false,
    "generator_checkpoint_frequency": 5,

    "_comment_training": "=== GENERATOR TRAINING SETTINGS ===",
    "generator_training_epochs": 10,
    "generator_augmentation": true,
    "generator_augmentation_noise": 0.1,
    "generator_validation_frequency": 5,
    "generator_target_sequence_length": 1214,

    "_comment_adapter": "=== ADAPTER SETTINGS (Skipped in generator-only mode) ===",
    "adapter_aggregation_mode": "none",
    "global_model_train": false,
    "global_model_train_epochs": 0,
    "global_model_train_from_nodes_adapters": false,
    "global_model_train_from_generator": false,
    "global_model_train_from_nodes_audio_embeddings": false,

    "clip_adapter_learning_rate": 1e-4,
    "clip_adapter_weight_decay": 0.0001,
    "clip_adapter_learning_rate_schedule": false,
    "t5_adapter_learning_rate": 1e-2,
    "t5_adapter_weight_decay": 0.01,
    "t5_adapter_learning_rate_schedule": false,

    "_comment_generation": "=== IMAGE GENERATION (disabled in training mode) ===",
    "generate_nodes_images_frequency": 0,
    "generate_global_images_frequency": 0,
    "generate_low_memomy_footprint": true,
    "generate_from_clip_text_embeddings": false,
    "generate_from_t5_text_embeddings": false,
    "images_output_dir": "esc50-5n-ac-generators-perclass",

    "store_audio_embeddings": false,
    "audio_embedding_file_name": null
  },
  "nodes": {
    "0": {
      "dataset": "ESC50",
      "selected_classes": ["dog", "rooster", "pig", "cow", "frog", "cat", "hen", "insects", "sheep", "crow"],
      "train_folds": [0, 1, 2, 3],
      "test_folds": [4],
      "diffusion_type": "flux",
      "_comment": "Node 0 - Animals (10 classes = 10 generators)"
    },
    "1": {
      "dataset": "ESC50",
      "selected_classes": ["rain", "sea_waves", "crackling_fire", "crickets", "chirping_birds", "water_drops", "wind", "pouring_water", "toilet_flush", "thunderstorm"],
      "train_folds": [0, 1, 2, 3],
      "test_folds": [4],
      "diffusion_type": "flux",
      "_comment": "Node 1 - Natural soundscapes & water (10 classes = 10 generators)"
    },
    "2": {
      "dataset": "ESC50",
      "selected_classes": ["crying_baby", "sneezing", "clapping", "breathing", "coughing", "footsteps", "laughing", "brushing_teeth", "snoring", "drinking_sipping"],
      "train_folds": [0, 1, 2, 3],
      "test_folds": [4],
      "diffusion_type": "flux",
      "_comment": "Node 2 - Human sounds (10 classes = 10 generators)"
    },
    "3": {
      "dataset": "ESC50",
      "selected_classes": ["door_wood_knock", "mouse_click", "keyboard_typing", "door_wood_creaks", "can_opening", "washing_machine", "vacuum_cleaner", "clock_alarm", "clock_tick", "glass_breaking"],
      "train_folds": [0, 1, 2, 3],
      "test_folds": [4],
      "diffusion_type": "flux",
      "_comment": "Node 3 - Interior/domestic sounds (10 classes = 10 generators)"
    },
    "4": {
      "dataset": "ESC50",
      "selected_classes": ["helicopter", "chainsaw", "siren", "car_horn", "engine", "train", "church_bells", "airplane", "fireworks", "hand_saw"],
      "train_folds": [0, 1, 2, 3],
      "test_folds": [4],
      "diffusion_type": "flux",
      "_comment": "Node 4 - Exterior/urban sounds (10 classes = 10 generators)"
    }
  },
  "model": {
    "backbone": "a2v",
    "backbone_model": "hf_vit",
    "pretrained": false
  },
  "training": {
    "optimizer": "AdamW",
    "learning_rate": 0.001,
    "batch_size": 8,
    "weight_decay": 0.0001,
    "momentum": 0.9
  },
  "dataset": {
    "name": "ESC50",
    "path": "./data"
  },
  "wandb": {
    "disabled": false
  }
}
